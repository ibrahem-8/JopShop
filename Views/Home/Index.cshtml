<div class="container my-5 wow fadeInUp" data-wow-delay="0.1s">
    <h2 class="text-center mb-4 fs-1 textmi">All News !!!</h2>

    <div class="scroll-wrapper position-relative">
        <button class="btn btn-success scroll-buttons start-0" id="scrollPostsLeft">
            <i class="fas fa-chevron-left"></i>
        </button>

        <div class="scroll-container d-flex flex-nowrap" id="postsContainer">
            @foreach (var post in Model.LatestPosts)
            {
               <div class="scroll-item card shadow border-0 mx-2"
     style="min-width:97%; max-width: 98%; border-radius: 12px;">
    <div class="card-body d-flex flex-column justify-content-between  p-4">
        <div>
            <h4 class="card-title text-success mb-3">@post.Title</h4>
            <p class="card-text text-muted" style="font-size: 1rem; line-height: 1.6; margin-bottom: 0;margin-bottom: 0; ">
                @post.PostText
            </p>
        </div>

        <div class="d-flex justify-content-between align-items-center">
            <small class="text-muted">
                Published on @post.CreatedAt?.ToString("yyyy-MM-dd HH:mm")
            </small>

            @if (Context.Session.GetString("CurrentUser")?.ToLower() == "admin@gmail.com")
            {
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-warning"
                            data-bs-toggle="modal" data-bs-target="#editModal-@post.Id">
                        <i class="fas fa-edit"></i> Edit
                    </button>
                    <button class="btn btn-sm btn-outline-danger"
                            data-bs-toggle="modal" data-bs-target="#deleteModal-@post.Id">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                </div>
            }
        </div>
    </div>
</div>


                <!-- Edit Modal -->
                <div class="modal fade" id="editModal-@post.Id" tabindex="-1" aria-labelledby="editModalLabel-@post.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content rounded-3">
                            <form asp-action="Edit" asp-controller="Posts" method="post">
                                <div class="modal-header bg-success text-white">
                                    <h5 class="modal-title">Edit Post</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="Id" value="@post.Id" />
                                    <input type="hidden" name="UserId" value="@post.UserId" />
                                    <input type="hidden" name="CreatedAt" value="@post.CreatedAt" />
                                    <div class="mb-3">
                                        <label class="form-label">Title</label>
                                        <input type="text" name="Title" class="form-control" value="@post.Title" required />
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Content</label>
                                        <textarea name="PostText" class="form-control" rows="4" required>@post.PostText</textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal-@post.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@post.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content rounded-3">
                            <form asp-action="Delete" asp-controller="Posts" method="post">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title">Confirm Delete</h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete the post "<strong>@post.Title</strong>"?</p>
                                    <input type="hidden" name="id" value="@post.Id" />
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <button class="btn btn-success scroll-buttons end-0" id="scrollPostsRight">
            <i class="fas fa-chevron-right"></i>
        </button>
    </div>
</div>

<div class="container my-5 wow fadeInUp" data-wow-delay="0.1s">
    <h2 class="text-center mb-4 fs-1 textmi">Most Popular Freelancers</h2>
    <p class="text-center mb-4 textm text-lg fs-4">Discover the top freelancers who excel in their fields and help you achieve your goals. Whether you're looking for experts in design, development, or marketing, we have a wide range of talented professionals ready to work with you.</p>
    <div id="publishedUsersContainer" class="row g-1">
       
  
    

    <div class="scroll-wrapper position-relative">
        <button class="btn btn-success scroll-buttons start-0" id="scrollUsersLeft">
            <i class="fas fa-chevron-left"></i>
        </button>

        <div id="usersContainer" class="scroll-container d-flex flex-nowrap overflow-auto px-2">
            @foreach (var user in Model.PublishedUsers)
            {
                <div class="scroll-item card  shadow-sm border-0" style=" border-radius: 12px;">
                    <img src="@user.ImagePath"
                         class="card-img-top"
                         alt="@user.UserName"
                         style="height: 320px; object-fit: cover; border-radius: 10px 10px 0 0;" />
                    <div class="card-body text-center">
                        <h5 class="card-title fs-4">@user.UserName</h5>

                        @{
                            var avg = Math.Round(user.AverageRating, 1);
                        }

                        <div class="mb-2">
                            @for (int i = 0; i < 5; i++)
                            {
                                var color = i < Math.Round(avg) ? "#fd4" : "#ccc";
                                <i class="fas fa-star" style="color:@color; font-size: 24px;"></i>
                            }
                        </div>

                        <a asp-controller="Users" asp-action="Profile" asp-route-id="@user.Id"
                           class="btn btn-outline-success w-75 mb-2 rounded-pill">View Profile</a>
                    </div>
                </div>
            }
        </div>

        <button class="btn btn-success scroll-buttons end-0" id="scrollUsersRight">
            <i class="fas fa-chevron-right"></i>
        </button>
    </div>
</div>

