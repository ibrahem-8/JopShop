@model JopShop.Models.Job

@{
    ViewData["Title"] = "Create Job";
}


<div class="container py-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 700px;">
        <h2 class="mb-4 text-center">📝 Publish a project</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Project title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label asp-for="Category" class="form-label">Classification</label>
                <select asp-for="Category" class="form-select">
                    <option disabled selected>Choose a category</option>
                    <option>Graphic Design</option>
                    <option>Website Development</option>
                    <option>Digital Marketing</option>
                    <option>Project Management</option>
                    <option>Technical Support</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Project Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

           
            <!-- Budget and Currency -->
         
              <div class="mb-3">
    <label asp-for="Salary" class="form-label">Budget</label>
    <div class="input-group">
        <input asp-for="Salary" type="number" min="0" class="form-control" placeholder="e.g. 300" />
        <span class="input-group-text">JD</span>
    </div>
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

                


            <!-- Attachment -->
            <div class="mb-3">
                <label class="form-label">Attachments (optional)</label>
                <input name="AttachmentFile" type="file" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Submit Project</button>
        </form>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


























