@model JopShop.Models.Job

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid py-5">
    <div class="card shadow-lg p-4 mx-auto" style="max-width: 900px;">
        <h2 class="mb-4 text-center">📝 Edit a project</h2>

        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Project Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

         

            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label>
                <select asp-for="Category" class="form-select">
                    <option disabled selected>Choose a category</option>
                    <option>Graphic Design</option>
                    <option>Website Development</option>
                    <option>Digital Marketing</option>
                    <option>Project Management</option>
                    <option>Technical Support</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

   <div class="mb-3">
                <label asp-for="Description" class="form-label">Project Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Salary" class="form-label">Budget</label>
                <input asp-for="Salary" type="number" min="0" class="form-control" placeholder="example: 300" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

          

            <div class="text-center">
                <input type="submit" value="💾 Save Changes" class="btn btn-primary w-100" />
            </div>
        </form>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="text-decoration-none">🔙 Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
