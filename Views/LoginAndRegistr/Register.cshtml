@model JopShop.Models.RegistrationModel
@{
	ViewData["Title"] = "Register";
	Layout = null;
}

<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Job&Shop</title>
	<link rel="icon" href="~/homeAssets/img/logo.png" type="image/png">
	<meta content="width=device-width, initial-scale=1.0" name="viewport">
	<meta content="" name="keywords">
	<meta content="" name="description">



	<!-- Google Web Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

	<!-- Icon Font Stylesheet -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

	<!-- Libraries Stylesheet -->
	<link href="~/homeAssets/lib/animate/animate.min.css" rel="stylesheet">
	<link href="~/homeAssets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
	<!--id="email",id="password",id="create",id="confirm_password"
	<p class="text-center">* shall include 0-9 a-z A-Z in 4 to 10 characters</p>-->
	<!-- Customized Bootstrap Stylesheet -->
	<link href="~/homeAssets/css/bootstrap.min.css" rel="stylesheet">

	<!-- Template Stylesheet -->
	<link href="~/homeAssets/css/style.css" rel="stylesheet">
</head>


<body class="body_sign">
	<div id="messageBox" class="showmessage"></div>
	<div class="box_sin">

		<div id="alert-container" class="alert-container-custom"></div>
		<div class="row">
			<div class="col-md-6">

				<!-- استخدمنا asp-action لربط الفورم مع RegisterStep1 -->
				<form asp-action="RegisterStep1" method="post" id="registerForm">
					<h1 class="h1_sign"> SignUp</h1>

					<input type="email" id="email" name="Email" class="email_sign" placeholder="Email address" required value="@Model.Email">
					<br>
					<input type="password" id="password" name="Password" class="pass_sign" placeholder="Password" required>
					<br>
					<input type="password" id="confirm_password" name="ConfirmPassword" class="pass_sign" placeholder="Confirm Password" required>
					<br>

					<button type="submit" id="create" class="btn_log1">Create account</button>

					<h2 class="h_log">
						Already have an account? Please
						<a class="a_log" href="/LoginAndRegistr/Login">Login</a>
					</h2>

					@if (Model != null)
					{
						@if (!string.IsNullOrEmpty(Model?.ErrorMessages))
						{
							<div class="text-danger">@Model?.ErrorMessages</div>
						}
					}

				</form>
			</div>
			<div class="col-md-6 d-flex justify-content-center align-items-center">
				<img src="/homeAssets/img/page_sign.png" alt="Signup Image" style="max-width: 100%; max-height: 500px; min-width: 200px; min-height: 200px;">
			</div>
		</div>
	</div>

	<!-- JavaScript Libraries -->
	<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/homeAssets/lib/wow/wow.min.js"></script>
	<script src="~/homeAssets/lib/easing/easing.min.js"></script>
	<script src="~/homeAssets/lib/waypoints/waypoints.min.js"></script>
	<script src="~/homeAssets/lib/owlcarousel/owl.carousel.min.js"></script>


	<!-- Template Javascript -->
	<link href="~/homeAssets/css/style.css" rel="stylesheet">
</body>
</html>























