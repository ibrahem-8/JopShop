@* @{
    var email = TempData["Email"] as string;
    var password = TempData["Password"] as string;
}
 *@

<body class="body_profile">
	<div id="messageBox" class="showmessage"></div>
	<div class="profile">
		<div class="profile-containerform">
			<div class="form-containerform">
				<!-- ✅ تعديل الفورم ليرسل البيانات إلى Register2 -->
				<form class="for_pro" asp-action="Register2" method="post" enctype="multipart/form-data" id="profileForm">
				
					
					@*     <input " type="hidden" name="Email" value="@email" />
    <input type="hidden" name="Password" value="@password" /> *@


					@if (ViewBag.Errors != null)
					{
						@if (!string.IsNullOrEmpty(ViewBag.Errors))
						{
							<div class="text-danger">@ViewBag.Errors</div>
						}
					}


					<label>Your Image</label>
					<input type="file" accept="image/*" name="ImageFile" id="img_pro">

					<label>Full Name</label>
					<input type="text" placeholder="Full Name" name="Name" class="filed_text" id="fname_pro" value="@Model.Name">

					<label>User Name</label>
					<input type="text" name="UserName" id="user_name" placeholder="Username" required value="@Model.UserName" class="filed_text" />

					<label>Phone Number</label>
					<input type="tel" placeholder="example: 079***" maxlength="10" class="filed_text" name="PhoneNumber" id="ph_pro" value="@Model.PhoneNumber" pattern="[0-9]{10}">

					<label class="b_gpro">Gender</label>
					<select name="Gender" id="select_pro" class="filed_text" required>
						<option value="">Select Gender</option>
						<option value="Male">Male</option>
						<option value="Female">Female</option>
					</select>

					<label class="b_gpro">Birth Date</label>
					<input type="date" name="BirthDate" max="2020-01-01" class="filed_text" id="date_pro">

					<label>Upload CV (PDF, DOCX)</label>
					<input type="file" accept=".pdf, .doc, .docx" name="CvFile" id="cv_pro">

					<label>LinkedIn Profile URL (Optional)</label>
					<input name="LinkedInUrl" id="linkedin_pro" placeholder="LinkedIn URL" class="filed_text" />

					<button type="submit" class="send_pro" id="send_pro">Send</button>
				</form>
			</div>
			<img src="~/homeAssets/img/page_log.png" class="img_profileform">
		</div>


		<!-- JavaScript Libraries -->
		<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
		<script src="~/homeAssets/lib/wow/wow.min.js"></script>
		<script src="~/homeAssets/lib/easing/easing.min.js"></script>
		<script src="~/homeAssets/lib/waypoints/waypoints.min.js"></script>
		<script src="~/homeAssets/lib/owlcarousel/owl.carousel.min.js"></script>

		<!-- Template Javascript -->
		<link href="~/homeAssets/css/style.css" rel="stylesheet">

</body>

</html>





