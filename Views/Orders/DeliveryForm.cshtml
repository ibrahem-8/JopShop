@{
    ViewData["Title"] = "Delivery Information";
}
<div class="container-fluid m-2">
<h2 class="mb-4 m-3 fs-2 textmi text-success">Delivery Information</h2>

<form asp-controller="Orders" asp-action="formDelivery" method="post" >
    <input type="hidden" name="orderId" value="@ViewBag.OrderId" />

    <div class="mb-3">
        <label class="form-label">Full Name</label>
        <input type="text" name="FullName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Address</label>
        <input type="text" name="Address" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input type="tel" name="Phone" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Confirm Delivery</button>
</form>
</div>