    <link href="~/homeAssets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/homeAssets/css/style.css" rel="stylesheet">
</head>

<body>

    <div class="container-xxl bg-white ">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top   ">

            <a href="index.html" class="navbar-brand d-flex align-items-center text-center py-0 px-4 px-lg-5">
                <img class="me-8 w-100 h-100" src="~/homeAssets/img/logo.png " alt="Logo">

            </a>

            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="index.html" class="nav-item nav-link active">Home</a>
                    <a href="job-list.html" class="nav-item nav-link">Jobs</a>
                    <a href="stores.html" class="nav-item nav-link">stores</a>
                    <a href="about.html" class="nav-item nav-link">About</a>
                    <a href="contact.html" class="nav-item nav-link">Contact</a>
                </div>
                <div class="d-none d-lg-block">
                    <a href="profilePage.html" class="bi-person custom-icon me-3"></a>
                </div>
                <a href="sign-up.html" class="btn btn-primary rounded-0 py-4 px-md-4 d-none d-lg-block">SignUp<i class="fa fa-arrow-right ms-3"></i></a>
            </div>
        </nav>
        <!-- Navbar End -->

        <div id="messageBox" class="showmessage"></div>
        <div class="container-fluid data_profile">
            <div class="row gy-4">


                <div class="col-lg-4 col-md-5 col-sm-12">
                    <div class="profile-container d-flex flex-column p-3 bg-white rounded-xl  shadow" style="height: 100%;">
                        <img id="profile_img" src="" alt="Profile Picture" class="img-fluid d-block mx-auto">
                        <div class="text-center text-dark mt-3 mb-1">
                            <p><span id="name" class="textm fs-2"></span></p>
                        </div>
                        <div class="rate-cont ">
                        </div>


                        <div class="mt-auto d-flex flex-column flex-md-row gap-2">
                            <a id="cv" href="#" class="btn btn-lg btn-dark text-primary flex-fill">Download CV</a>
                            <a id="linkedin" target="_blank" class="btn btn-lg btn-dark text-primary flex-fill d-flex align-items-center justify-content-center">
                                <i class="fab fa-linkedin me-2"></i> LinkedIn
                            </a>
                        </div>

                    </div>
                </div>


                <div class="col-lg-8 col-md-7 col-sm-12  ">
                    <div class="profile-container bg-white shadow rounded-xl  p-4 h-100 d-flex flex-column">

                        <p class="fs-1 fw-bold mb-4 border-bottom text-dark pb-2">Details :-</p>

                        <p class="mb-3">
                            <i class="fas fa-user-circle fs-4 text-primary me-2"></i>
                            <strong class="fs-5">User name:</strong>
                            <span id="username" class="fs-4 ms-2"></span>
                        </p>

                        <p class="mb-3">
                            <i class="fas fa-calendar-alt fs-4 text-primary me-2"></i>
                            <strong class="fs-5">Date of Birth:</strong>
                            <span id="birth" class="fs-4 ms-2"></span>
                        </p>

                        <p class="mb-3">
                            <i class="fas fa-phone fs-4 text-primary me-2"></i>
                            <strong class="fs-5">Phone Number:</strong>
                            <span id="phone" class="fs-4 ms-2"></span>
                        </p>

                        <p class="mb-4">
                            <i class="fas fa-venus-mars fs-4 text-primary me-2"></i>
                            <strong class="fs-5">Gender:</strong>
                            <span id="gender" class="fs-4 ms-2"></span>
                        </p>

                        <div class="mt-auto text-center">
                            <button id="editBtn" class="btn btn-lg btn-dark text-primary px-5" onclick="editProfile()">
                                <i class="fas fa-edit me-2"></i> Update Data
                            </button>
                        </div>

                    </div>
                </div>

                <!-- المشاريع -->
                <div class="col-12">
                    <h3 class="textmi fs-2 mb-4">My Projects :-</h3>

                    <div class="card mb-4" id="addProjectCard">
                        <div class="card-header bg-dark text-success textmi fs-3">Add New Project</div>
                        <div class="card-body">
                            <form id="project_form">
                                <div class="mb-3">
                                    <label for="des_project" class="form-label ps-3 textmi fs-5">Project Description</label>
                                    <textarea id="des_project" class="form-control" rows="3" placeholder="Write something about your project..."></textarea>
                                </div>
                                <div class="mb-3">
                                    <label for="new_project" class="form-label ps-3 textmi fs-5">Upload File</label>
                                    <input type="file" id="new_project" class="form-control">
                                </div>
                                <button type="submit" id="pro_send" class="btn btn-dark text-success rounded-2 w-100">Add Project</button>
                            </form>
                        </div>
                    </div>

                    <div class="position-relative project-section">
                        <button class="scroll-btn left d-none"><i class="fas fa-chevron-left"></i></button>

                        <div id="projectsContainer" class="d-flex flex-nowrap overflow-hidden gap-3 scroll-area">
                            <!-- الكروت سيتم إضافتها هنا من الجافاسكربت -->
                        </div>

                        <button class="scroll-btn right d-none"><i class="fas fa-chevron-right"></i></button>
                    </div>

                </div>
            </div>
        </div>


        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Company</h5>
                        <a class="btn btn-link text-white-50" href="">About Us</a>
                        <a class="btn btn-link text-white-50" href="">Contact Us</a>
                        <a class="btn btn-link text-white-50" href="">Our Services</a>
                        <a class="btn btn-link text-white-50" href="">Privacy Policy</a>
                        <a class="btn btn-link text-white-50" href="">Terms & Condition</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Quick Links</h5>
                        <a class="btn btn-link text-white-50" href="about.html">About Us</a>
                        <a class="btn btn-link text-white-50" href="contact.html">Contact Us</a>
                        <a class="btn btn-link text-white-50" href="">Our Services</a>
                        <a class="btn btn-link text-white-50" href="">Privacy Policy</a>
                        <a class="btn btn-link text-white-50" href="">Terms & Condition</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Contact</h5>
                        <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>amman</p>
                        <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>0786420582</p>
                        <p class="mb-2"><i class="fa fa-envelope me-3"></i>abdelrhman@hotmail.com</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="text-white mb-4">Newsletter</h5>
                        <p>text ttttttttttttttttt</p>
                        <div class="position-relative mx-auto" style="max-width: 400px;">
                            <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                            <button type="button" class="btn btn-primary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="copyright">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                            &copy; <a class="border-bottom" href="#">Frelancers</a>, All Right Reserved.

                            <!--/* This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. */-->
