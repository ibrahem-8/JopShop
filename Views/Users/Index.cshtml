@{
    ViewData["Title"] = "User Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>User Profile</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Google Fonts + Bootstrap + Icons -->
